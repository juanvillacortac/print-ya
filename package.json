{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm run dev --filter web",
    "dev:libs": "turbo run dev --filter @shackcart/* --parallel",
    "generate": "turbo run generate",
    "db:push": "turbo run generate",
    "start:node": "pnpm run start:node --filter web"
  },
  "devDependencies": {
    "turbo": "^1.4.3"
  }
}
